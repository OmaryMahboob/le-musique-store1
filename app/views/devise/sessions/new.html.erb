<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card mt-2">
        <div class="m-2">
          <div class="card-header">
            <h2 class="text-center m-4">Sign in</h2>
          </div>
          <div class="card-body">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "row g-3"}) do |f| %>
              <div class="col-md-12">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            placeholder: "boris@lewagon.com",
                            input_html: { autocomplete: "email", class: "form-control" } %>
              </div>
              <div class="col-md-12">
                <%= f.input :password,
                            required: true,
                            placeholder: "•••••••••",
                            input_html: { autocomplete: "current-password", class: "form-control" } %>
                <%= f.input :remember_me, as: :boolean, label: "Remember me" if devise_mapping.rememberable? %>
              </div>
              <div class="form-actions">
                <div class="col-12 text-center">
                  <%= f.button :submit, "Log in", class: "btn btn-primary mb-4 col-3" %>
                </div>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
