<h2 class="text-center">Welcome to your dashboard <%= "#{current_user.first_name} #{current_user.last_name}" %> </h2>
<br>
<div class="d-flex">
  <div class="booking-column">
    <h3 class="text-center">My bookings</h3>
    <% @orders.each do |order| %>
      <a href="<%= product_path(order.product) %>" class="link">
        <div class="card-booking">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg"/>
            <div class="card-booking-infos">
              <span> <h2 class=""><strong><%= order.product.title %></strong></h2> </span>
              <span class="avatar-position">
                <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-booking-user avatar-bordered" />
              </span>
            </div>
            <div class="card-infos">
              <p class="text-break"><%= order.product.description %> </p>
              <p class="lh-1"> <strong> Booking from: </strong> <%= order.start_date.strftime('%d/%m/%Y') %></p>
              <p class="lh-1"> <strong> Booking until: </strong> <%= order.end_date.strftime('%d/%m/%Y') %></p>
              <p> <strong>Total days: <%= (order.end_date.to_date - order.start_date.to_date).to_i %> </strong></p>
            </div>
            <h2 class="card-booking-pricing"> <%= (order.end_date.to_date - order.start_date.to_date).to_i * order.product.price %> â‚¬</h2>
        </div>
      </a>
      <br>
    <% end %>
  </div>
  <div class="product-column">
    <h3 class="text-center">My products</h3>
    <% @instruments.each do |product|%>
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg"/>
        <div class="card-product-infos">
          <h2><%= product.title %></h2>
          <p><%= product.description %></p>
          <%= link_to "See More", product_path(product) %>
        </div>
      </div>
      <br>
    <% end %>
  </div>
</div>

<%= link_to "Back to products", products_path %>
