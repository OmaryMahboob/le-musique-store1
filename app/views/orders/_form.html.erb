
<div class="card-body">
<h3>Book this instrument</h3>


  <div class="form-control">
  <%= simple_form_for [@product, @order] do |f| %>
    <% payment_types = ["Cash", "Check", "Debit cards", "Credit card", "Mobile payment"] %>
    <%= f.input :payment_method, collection: payment_types %>
    <%= f.input :start_date, html5: true %>
    <%= f.input :end_date, html5: true %>

    <%= f.button :submit, class: "btn btn-primary mb-4 col-3" %>
  <% end %>
</div>
</div>
