<% if notice %>
  <div class="container row justify-content-center">
    <div class="alert alert-primary alert-dismissible fade show m-1 col-6" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      <%= notice %>
    </div>
  </div>
<% end %>
<% if alert %>
  <div class="container row justify-content-center">
    <div class="alert alert-danger alert-dismissible fade show m-1 col-6" role="alert">
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      <%= alert %>
    </div>
  </div>
</div>
<% end %>
