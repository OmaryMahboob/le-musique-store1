<% if user_signed_in? == false %>
  <div class="alert alert-warning" role="alert">
    You have to login for see all the information of the customer!
  </div>
<% end %>
<div class="row justify-content-center">
  <h1 class="text-center"><%= @product.title%></h1>

  <img src="<%=product.photo%>" alt="<%=product.title%> photo" >

  <p><strong>Description:</strong> <%= product.description %></p>

  <p><strong>Price:</strong> <%= product.price %> â‚¬</p>

  <% if user_signed_in? %>
    <p><strong>Email: </strong><%= product.user.email %></p>
    <p><strong>Address: </strong><%= product.address %></p>

    <% if @product.user != current_user %>
      <div id="map" style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= [@marker].to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
    <% end %>

    <% if @product.user != current_user %>
      <%= render "orders/form", order: @order%>
    <% end %>

    <% if @product.user == current_user %>
      <%= link_to "Edit this product", edit_product_path(@product) %>
      <%= button_to "Destroy this product", @product, method: :delete %>
    <% end %>
  <% end %>
</div>
