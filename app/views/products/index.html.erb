<h1>Products list</h1>

<div class="float-container">
   <div class="float-child">
    <h3> <%=link_to "Add new product", new_product_path %> </h3>
  </div>
  <div class="float-child">
    <% @products.each do |product|%>
    <p>
    <strong>Title:</strong>
    <%= link_to product.title, product_path(product) %>
      <%= cl_image_tag(product.photo.key,
      width: 400, height: 300, crop: :fill) if !product.photo.key.nil? %>

    <!-- for face detection -->
    <%#= cl_image_tag("IMAGE_WITH_FACE_ID",
      width: 150, height: 150, crop: :thumb, gravity: :face) %>
    </p>

    <p>
    <strong>Description:</strong>
    <%= product.description %>
    </p>

    <p>
    <strong>Price:</strong>
    <%= product.price %>
    </p>
    <% end %>
  </div>


</div>
