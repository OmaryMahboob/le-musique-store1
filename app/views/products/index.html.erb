<h1>Products list</h1>

<%# Code for the Map %>
<% if user_signed_in? %>
  <div class="accordion pb-4" id="accordionExample">
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button fs-6 lh-1" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Map
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div id="map" style="width: 100%; height: 500px;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%# Code for the cards %>
<div class="float-container">
   <div class="float-child">
    <h3> <%=link_to "Add new product", new_product_path %> </h3>
  </div>
  <div class="float-child">
    <% @products.each do |product|%>
      <p> <strong>Title:</strong> <%= link_to product.title, product_path(product) %> </p>
      <%= render 'photo_card', product: product %>
      <p> <strong>Description:</strong> <%= product.description %> </p>
      <p> <strong>Price:</strong> <%= product.price %> </p>
    <% end %>
  </div>
</div>
