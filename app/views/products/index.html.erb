<%= form_with url: products_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a product"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>


<h1>Products list</h1>

<% if user_signed_in? %>
  <div id="map" style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
<% end %>

<div class="float-container">
   <div class="float-child">
    <h3> <%=link_to "Add new product", new_product_path %> </h3>
  </div>
  <div class="float-child">
    <% @products.each do |product|%>
      <p> <strong>Title:</strong> <%= link_to product.title, product_path(product) %> </p>
      <img src="<%=product.photo%>" alt="<%=product.title%> photo" >
      <p> <strong>Description:</strong> <%= product.description %> </p>
      <p> <strong>Price:</strong> <%= product.price %> </p>
    <% end %>
  </div>
</div>
