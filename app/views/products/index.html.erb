<h1>Products list</h1>

<%# Code for the Map %>
<% if user_signed_in? %>
  <div class="accordion pb-4" id="accordionExample">
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button fs-6 lh-1" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Map
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body">
       ra   <div id="map" style="width: 100%; height: 500px;"
            data-controller="map"
            data-map-markers-value="<%= @markers.to_json %>"
            data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%# Code for the cards %>
<div>
  <h3> <%=link_to "Add new product", new_product_path, style: "" %> </h3>
  <div class="card d-flex grow w-25">
    <% @products.each do |product|%>
      <%= link_to product_path(product), class: "product-link" do %>
        <div class="card-body  product-link">
          <div class="img-render">
            <%= render 'pages/instrument', product: product%>
          </div>
          <h5 class="card-title mt-3"> <strong>Title:</strong> <%= product.title%> </h5>
          <p class="card-sub"> <strong>Price:</strong> <%= product.price %> </p>
          <p class="card-text"> <strong>Description:</strong> <%= product.description %> </p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


