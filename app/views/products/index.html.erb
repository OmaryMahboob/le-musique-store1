<h1>Products list</h1>

<%# Code for the Map %>
<% if user_signed_in? %>
  <div id="map" style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
<% end %>

<%# Code for the cards %>
<div class="container">
  <div>
    <h3> <%=link_to "Add new product", new_product_path %> </h3>
  </div>
  <div class="card d-flex">
    <% @products.each do |product|%>
      <%# <div class="card-title" link_to product.title, product_path(product)> %>
      <div class="card-body">
        <h5 class="card-title"> <strong>Title:</strong> <%= product.title%> </h5>
        <div class="col-4">
          <%= render 'photo_card', product: product %>
        </div>
        <p class="card-sub"> <strong>Price:</strong> <%= product.price %> </p>
        <p class="card-text"> <strong>Description:</strong> <%= product.description %> </p>
      </div>
    <% end %>
  </div>
</div>
